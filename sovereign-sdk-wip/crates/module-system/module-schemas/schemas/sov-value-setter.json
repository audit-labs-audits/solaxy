{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CallMessage",
  "description": "This enumeration represents the available call messages for interacting with the `sov-value-setter` module.",
  "oneOf": [
    {
      "description": "Single value to set.",
      "type": "object",
      "required": [
        "set_value"
      ],
      "properties": {
        "set_value": {
          "type": "object",
          "required": [
            "value"
          ],
          "properties": {
            "gas": {
              "description": "Gas to charge. Don't charge gas if None.",
              "anyOf": [
                {
                  "$ref": "#/definitions/GasUnit(2)"
                },
                {
                  "type": "null"
                }
              ]
            },
            "value": {
              "description": "Singe new value.",
              "type": "integer",
              "format": "uint32",
              "minimum": 0.0
            }
          }
        }
      },
      "additionalProperties": false
    },
    {
      "description": "Many values to set.",
      "type": "object",
      "required": [
        "set_many_values"
      ],
      "properties": {
        "set_many_values": {
          "type": "array",
          "items": {
            "type": "integer",
            "format": "uint8",
            "minimum": 0.0
          }
        }
      },
      "additionalProperties": false
    },
    {
      "description": "Assert the visible slot number is as expected.",
      "type": "object",
      "required": [
        "assert_visible_slot_number"
      ],
      "properties": {
        "assert_visible_slot_number": {
          "type": "object",
          "required": [
            "expected_visible_slot_number"
          ],
          "properties": {
            "expected_visible_slot_number": {
              "description": "The expected visible slot number.",
              "type": "integer",
              "format": "uint64",
              "minimum": 0.0
            }
          }
        }
      },
      "additionalProperties": false
    }
  ],
  "definitions": {
    "GasUnit(2)": {
      "description": "GasUnit is an array of size 2",
      "type": "array",
      "items": {
        "type": "number"
      },
      "maxItems": 2,
      "minItems": 2
    }
  }
}
